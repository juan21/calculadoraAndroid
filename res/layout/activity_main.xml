<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.calculadora.MainActivity" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="54dp"
        android:layout_marginLeft="27dp" >
    </RelativeLayout>

    <Button
        android:id="@+id/btndos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnuno"
        android:layout_alignBottom="@+id/btnuno"
        android:layout_toRightOf="@+id/btnuno"
        android:minHeight="40dip"
        android:minWidth="60dip"
        android:text="2" />

    <Button
        android:id="@+id/btnsuma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btntres"
        android:layout_toRightOf="@+id/btntres"
        android:minHeight="40dip"
        android:minWidth="60dip"
        android:text="+" />

    <Button
        android:id="@+id/btncuatro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnuno"
        android:layout_toRightOf="@+id/relativeLayout1"
        android:minHeight="40dip"
        android:minWidth="60dip"
        android:text="4" />

    <Button
        android:id="@+id/btncinco"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btncuatro"
        android:layout_toRightOf="@+id/btncuatro"
        android:minHeight="40dip"
        android:minWidth="60dip"
        android:text="5" />

    <Button
        android:id="@+id/btnseis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btncinco"
        android:layout_toRightOf="@+id/btncinco"
        android:minHeight="40dip"
        android:minWidth="60dip"
        android:text="6" />

    <Button
        android:id="@+id/btnresta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnseis"
        android:layout_toRightOf="@+id/btnseis"
        android:minHeight="40dip"
        android:minWidth="60dip"
        android:text="-" />

    <Button
        android:id="@+id/btnsiete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btncuatro"
        android:layout_toLeftOf="@+id/btncinco"
        android:minHeight="40dip"
        android:minWidth="60dip"
        android:text="7" />

    <Button
        android:id="@+id/btnocho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btncinco"
        android:layout_alignTop="@+id/btnsiete"
        android:minHeight="40dip"
        android:minWidth="60dip"
        android:text="8" />

    <Button
        android:id="@+id/btnnueve"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btncinco"
        android:layout_toRightOf="@+id/btncinco"
        android:minHeight="40dip"
        android:minWidth="60dip"
        android:text="9" />

    <Button
        android:id="@+id/btndivicion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnseis"
        android:layout_toRightOf="@+id/btnseis"
        android:minHeight="40dip"
        android:minWidth="60dip"
        android:text="/" />

    <Button
        android:id="@+id/btncero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btnuno"
        android:layout_below="@+id/btnsiete"
        android:minHeight="40dip"
        android:minWidth="60dip"
        android:text="0" />

    <Button
        android:id="@+id/btnpunto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btndos"
        android:layout_below="@+id/btnsiete"
        android:minHeight="40dip"
        android:minWidth="60dip"
        android:text="." />

    <Button
        android:id="@+id/btnigual"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btnpunto"
        android:layout_toRightOf="@+id/btnpunto"
        android:minHeight="40dip"
        android:minWidth="60dip"
        android:text="=" />

    <Button
        android:id="@+id/btnmulti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnigual"
        android:layout_alignBottom="@+id/btnigual"
        android:layout_alignLeft="@+id/btnsuma"
        android:minHeight="40dip"
        android:minWidth="60dip"
        android:text="*" />

    <Button
        android:id="@+id/btnborra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtcampo"
        android:layout_below="@+id/btncero"
        android:layout_marginTop="46dp"
        android:minHeight="48dp"
        android:text="C" />

    <Button
        android:id="@+id/btntres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btndos"
        android:layout_alignBottom="@+id/btndos"
        android:layout_alignLeft="@+id/btnigual"
        android:minHeight="40dip"
        android:minWidth="60dip"
        android:text="3" />

    <Button
        android:id="@+id/btnlimpiar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btnborra"
        android:layout_alignBottom="@+id/btnborra"
        android:layout_alignLeft="@+id/btnigual"
        android:text="&lt;-" />

    <EditText
        android:id="@+id/txtcampo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/relativeLayout1"
        android:layout_below="@+id/relativeLayout1"
        android:ems="10" />

    <Button
        android:id="@+id/btnuno"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtcampo"
        android:layout_below="@+id/txtcampo"
        android:layout_marginTop="17dp"
        android:minHeight="40dip"
        android:minWidth="60dip"
        android:text="1" />

    <TextView
        android:id="@+id/txtpantalla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/txtcampo"
        android:layout_alignRight="@+id/btnsuma"
        android:layout_marginBottom="22dp"
        android:layout_toRightOf="@+id/relativeLayout1"
        android:minHeight="40dip" />

</RelativeLayout>